{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2022",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
